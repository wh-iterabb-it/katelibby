{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "root": true,
  "rules": {
    "max-len": ["error", 120, 4],
    "arrow-body-style": 0,
    "arrow-parens": 0,
    "camelcase": 0,
    "class-methods-use-this": 0,
    "consistent-return": 0,
    "default-case": 0,
    "func-names": 0,
    "global-require": 0,
    "import/no-dynamic-require": 0,
    "import/no-mutable-exports": 0,
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/anchor-is-valid": ["warn", { "aspects": ["invalidHref"] }],
    "new-cap": 0,
    "no-confusing-arrow": 0,
    "no-else-return": 0,
    "no-loop-func": 0,
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "no-unused-expressions": 0,
    "prefer-template": 0,
    "quote-props": 0,
  }
}
